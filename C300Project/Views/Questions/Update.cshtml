@model Question

@{
    var b = ViewData["Test"] as List<Quiz>;
    var c = ViewData["common"] as List<int>;
    ViewBag.Title = "Update Question!";
    int x = 1;
}

@section ScriptSection {


<script>
    function ConfirmUpdate() {
        if (confirm("Are you sure you want to delete?") == false) {
            event.preventDefault();
            event.stopPropagation();
            return false;

        }
    }

</script>
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-7">
        <span style="color:red">@ViewData["Msg"]</span><br />
        <div class="container">

            <form asp-controller="Questions" asp-action="Update" method="post" class="form-horizontal" role="form">
                <div class="form-horizontal">
                    <partial name="_Questions" />

                    <div>
                        <table class="table table-bordered table-condensed table-hover table-striped">
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Topic</th>
                                <th>Exam Level</th>
                                <th>Exam Date</th>
                                <th>Add To Quiz?</th>
                            </tr>


                            @foreach (var item in @b)

                            {
                                <tr>
                                    <td>
                                        @item.QuizId
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @item.Topic
                                    </td>
                                    <td>
                                        @item.Sec
                                    </td>
                                    <td>
                                        @item.StartDt
                                    </td>
                                    @if (c.Contains(item.QuizId))
                                    {
                                        <td>
                                            <input type="radio" id="rdOption1" value="True" name="@("Add" +x)" checked="checked" /> Yes
                                            <input type="radio" id="rdOption2" value="False" name="@("Add" +x)" /> No
                                        </td>

                                    }
                                    else
                                    {
                                        <td>
                                            <input type="radio" id="rdOption1" value="True" name="@("Add" +x)" /> Yes
                                            <input type="radio" id="rdOption2" value="False" name="@("Add" +x)" /> No
                                        </td>
                                    }

                                </tr>
                                x++;
                            }

                        </table>

                    </div>


                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-10">
                            <input type="submit" value="Update" class="btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
 </div>