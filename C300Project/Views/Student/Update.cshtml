@model Student

@{
    var b = ViewData["Class"] as List<Class>;
    var c = ViewData["common"] as List<int>;
    ViewBag.Title = "Update Student!";
    int x = 1;
}

@section ScriptSection {


<script>
    function ConfirmUpdate() {
        if (confirm("Are you sure you want to delete?") == false) {
            event.preventDefault();
            event.stopPropagation();
            return false;

        }
    }

</script>
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-7">
        <span style="color:red">@ViewData["Msg"]</span><br />
        <div class="container">

            <form asp-controller="Student" asp-action="Update" method="post" class="form-horizontal" role="form">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="StudentId" class="col-sm-3 control-label">Student Id:</label>
                        <div class="col-sm-6">
                            <input asp-for="StudentId" class="form-control" readonly="readonly" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="StudentId" class="text-danger"></span>
                        </div>
                    </div>
                    <partial name="_Student" />

                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-10">
                            <input type="submit" value="Update" class="btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
 </div>