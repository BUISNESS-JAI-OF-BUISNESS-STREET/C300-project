@model Quiz

@{
    ViewBag.Title = "Create new quiz!";
    var b = ViewData["Test"] as List<Question>;
    int x = 1;
}

@section ScriptSection {

    
    <script>
        function ConfirmCreate() {
            if (confirm("Confirm create Quiz?") == false) {
                event.preventDefault();
                event.stopPropagation();
                return false;

            }
        }

    </script>
}


    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-sm-7">
            <span style="color:red">@ViewData["Msg"]</span><br />
            <form asp-controller="Quiz" asp-action="Create" method="post" class="form-horizontal" role="form">
                <div class="form-horizontal">

                    <div class="form-group">
                        <label asp-for="Title" class="col-sm-3 control-label">Quiz Title: </label>
                        <div class="col-sm-6">
                            <input asp-for="Title" class="form-control" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="Topic" class="col-sm-3 control-label">Topic: </label>
                        <div class="col-sm-6">
                            <input asp-for="Topic" class="form-control" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Topic" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Sec" class="col-sm-3 control-label">Secondary Level: </label>
                        <div class="col-sm-6">
                            <input asp-for="Sec" class="form-control" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Sec" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row row">
                        <label class="control-label col-3" asp-for="Dt">Quiz Date and Time: </label>
                        <div class="col-3">
                            <div class='input-group date' id='BsDateTimePicker'>
                                <input class="form-control" asp-for="Dt"
                                       placeholder="YYYY-MM-DD" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="Dt" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Duration" class="col-sm-3 control-label">Duration (Minutes): </label>
                        <div class="col-sm-6">
                            <input asp-for="Duration" class="form-control" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                    </div>


                    <div>
                        <table class="table table-bordered table-condensed table-hover table-striped">
                            <tr>
                                <th>QuestionId</th>
                                <th>Questions</th>
                                <th>Topic</th>
                                <th>First Option</th>
                                <th>Second Option</th>
                                <th>Third Option</th>
                                <th>Fourth Option</th>
                                <th>Correct Answer</th>
                                <th>Add To Quiz?</th>
                            </tr>


                            @foreach (var item in @b)

                            {
                                <tr>
                                    <td>
                                        @item.QuestionId
                                    </td>
                                    <td>
                                        @item.Questions
                                    </td>
                                    <td>
                                        @item.Topic
                                    </td>
                                    <td>
                                        @item.FirstOption
                                    </td>
                                    <td>
                                        @item.SecondOption
                                    </td>
                                    <td>
                                        @item.ThirdOption
                                    <td>
                                        @item.FourthOption
                                    </td>
                                    <td>
                                        @item.CorrectAns
                                    </td>
                                    <td>
                                        <input type="radio" id="rdOption1" value="True" name="@("Add" +x)" /> Yes
                                        <input type="radio" id="rdOption2" value="False" name="@("Add" +x)" /> No
                                    </td>
                                </tr>
                                x++;
                            }

                        </table>

                    </div>


                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-10">
                            <input type="submit" value="Create" class="btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>