@model Question

    @{
        var a = ViewData["Quiz"];
        ViewBag.Title = "Create new question!";
    }

    @section ScriptSection {


        <script>
            function ConfirmCreate() {
                if (confirm("Confirm create Question?") == false) {
                    event.preventDefault();
                    event.stopPropagation();
                    return false;

                }
            }

        </script>
    }


        <h2>@ViewData["Title"]</h2>

        <div class="row">
            <div class="col-sm-7">
                <span style="color:red">@ViewData["Msg"]</span><br />
                <form asp-controller="Quiz" asp-action="CreateQuestionsInQuiz" method="post" class="form-horizontal" role="form"> //remove dropdownlist and assign question to the current quiz in a readonly
                    <div class="form-horizontal">
                        <div class="form-group row">
                            <label asp-for="QuizId" class="col-3 control-label">
                                Quiz:
                            </label>
                            <div class="col-sm-6">
                                <select id="ddlQuiz" class="form-control col-6"
                                        asp-for="QuizId" asp-items="@((SelectList)ViewData["Quiz"])">
                                    <option value="0">-- SELECT --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Questions" class="col-sm-3 control-label">Question: </label>
                            <div class="col-sm-6">
                                <input asp-for="Questions" class="form-control" />
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="Questions" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label asp-for="Topic" class="col-sm-3 control-label">Topic: </label>
                            <div class="col-sm-6">
                                <input asp-for="Topic" class="form-control" />
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="Topic" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="FirstOption" class="col-sm-3 control-label">First Option: </label>
                            <div class="col-sm-6">
                                <input asp-for="FirstOption" class="form-control" />
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="FirstOption" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="SecondOption" class="col-sm-3 control-label">Second Option: </label>
                            <div class="col-sm-6">
                                <input asp-for="SecondOption" class="form-control" />
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="SecondOption" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ThirdOption" class="col-sm-3 control-label">Third Option: </label>
                            <div class="col-sm-6">
                                <input asp-for="ThirdOption" class="form-control" />
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="ThirdOption" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="FourthOption" class="col-sm-3 control-label">Fourth Option: </label>
                            <div class="col-sm-6">
                                <input asp-for="FourthOption" class="form-control" />
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="FourthOption" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="CorrectAns" class="col-sm-3 control-label">Correct Answer: </label>
                            <div class="col-sm-6">
                                <input asp-for="CorrectAns" class="form-control" />
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="CorrectAns" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-10">
                                <input type="submit" value="Create" class="btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>