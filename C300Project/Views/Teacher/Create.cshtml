@model Teacher

@{
    var b = ViewData["Class"] as List<Class>;
    ViewBag.Title = "Add new teacher";
    int x = 1;
}

@section ScriptSection {

    
    <script>
        function ConfirmCreate() {
            if (confirm("Confirm create Question?") == false) {
                event.preventDefault();
                event.stopPropagation();
                return false;

            }
        }

    </script>
}


    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-sm-7">
            <span style="color:red">@ViewData["Msg"]</span><br />
            <form asp-controller="Teacher" asp-action="Create" method="post" class="form-horizontal" role="form">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="Name" class="col-sm-3 control-label">Name: </label>
                        <div class="col-sm-6">
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="MobileNo" class="col-sm-3 control-label">MobileNo: </label>
                        <div class="col-sm-6">
                            <input asp-for="MobileNo" class="form-control" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="MobileNo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="col-sm-3 control-label">Email: </label>
                        <div class="col-sm-6">
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Role" class="col-sm-3 control-label">Role: </label>
                        <div class="col-sm-6">
                            <input type="radio" id="Role1" value="Full-Time" name="Role" /> Full-Time
                            <input type="radio" id="Role2" value="Part-Time" name="Role" /> Part-Time
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>

                    <div>
                        <table class="table table-bordered table-condensed table-hover table-striped">
                            <tr>
                                <th>Id</th>
                                <th>Class Name</th>
                                <th>Add To Class?</th>
                            </tr>


                            @foreach (var item in @b)

                            {
                                <tr>
                                    <td>
                                        @x
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        <input type="radio" id="rdOption1" value="True" name="@("Add" +x)" /> Yes
                                        <input type="radio" id="rdOption2" value="False" name="@("Add" +x)" /> No
                                    </td>
                                </tr>
                                x++;
                            }

                        </table>

                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-10">
                            <input type="submit" value="Add" class="btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>