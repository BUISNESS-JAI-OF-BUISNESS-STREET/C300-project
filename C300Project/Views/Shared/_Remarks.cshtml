@model Announcement;

<form asp-controller="Home" asp-action="SaveRemarks" method="post"
      class="form-horizontal" role="form">
    <hr />
    <div class="form-group row row">
        <label class="control-label col-3"
               style="text-align:left">Class Id:</label>
        <input readonly="readonly" asp-for="@Model.ClassId"
               class="form-control-plaintext no-border col-2" style="border: 0" />



        <label class="col-offset-1 control-label col-2"
               style="text-align:left">Class : </label>
        <input readonly="readonly" asp-for="@Model.Class.Name"
               class="form-control-plaintext col-1" style="border: 0" />


    </div>




    <hr />
    @if (User.IsInRole("Admin") || User.IsInRole("PartTimeTeacher") || User.IsInRole("Teacher"))
    {
        <div class="form-group row row">
            <label class="control-label col-1" style="text-align:left">Notes:</label>
            <textarea class="form-control" asp-for="@Model.Remarks" rows="15"></textarea>
        </div>

        <div class="form-group row">
            <div class="col-offset-5 col-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>

    }
    else
    {
        <div class="form-group row row">
            <label class="control-label col-1" style="text-align:left">Notes:</label>
            <textarea readonly="readonly" class="form-control" asp-for="@Model.Remarks" rows="15"></textarea>
        </div>

    }
</form>